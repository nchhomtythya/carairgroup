<div class=".col-form-label-sm justify-content-center">
<%= simple_form_for (car) do |f| %>
  <%= f.input :model %>
  <%= f.input :make %>
  <%= f.input :year %>
  <%= f.input :category %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :transmission %>
  <%= f.input :colour %>
  <%= f.input :availability %>
  <%= f.input :address,
    input_html: {data: {address_autocomplete_target: "address"}},
    wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Create now :D", class: "btn btn-primary" %>
<% end %>
</div>
